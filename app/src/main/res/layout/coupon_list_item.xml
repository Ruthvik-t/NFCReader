<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@drawable/plp_background">

    <TextView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="SAVE 30%"
        android:gravity="center"
        android:paddingTop="5dp"
        android:textStyle="bold"
        android:textSize="24dp"
        android:textColor="#000000"
        android:id="@+id/coupon_image"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="Tesco Apple"
        android:maxLines="1"
        android:id="@+id/product_title"
        android:layout_alignTop="@+id/coupon_image"
        android:layout_toEndOf="@+id/coupon_image"
        android:layout_marginStart="15dp"
        android:ellipsize="end"
        android:textColor="@color/dark_text_blue"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/offer_description"
        android:textSize="12dp"
        android:text="offer is so and so"
        android:maxLines="2"
        android:textColor="#000000"
        android:layout_below="@+id/product_title"
        android:layout_alignStart="@+id/product_title"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAllCaps="false"
        android:text="Get QR Code"
        android:id="@+id/locateMe"
        android:textColor="@color/dark_text_blue"
        android:layout_marginEnd="10dp"
        android:background="@drawable/add_button_background"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â£5.00"
        android:textSize="14dp"
        android:textStyle="bold"
        android:id="@+id/offer_code"
        android:textColor="@color/black"
        android:layout_alignBaseline="@+id/locateMe"
        android:layout_alignBottom="@+id/locateMe"
        android:layout_alignStart="@+id/offer_description" />

</RelativeLayout>