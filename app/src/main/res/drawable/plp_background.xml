<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@+id/shape_stroke">
        <shape android:shape="rectangle" >
            <solid android:color="@color/plp_stroke" />

            <corners
                android:radius="@dimen/plp_corner_radius">
            </corners>
        </shape>
    </item>
    <item android:id="@+id/shape_product_bg" android:bottom="@dimen/plp_bottom_shadow" >
        <shape android:shape="rectangle" >
            <solid android:color="#ffffff" />
            <corners
                android:radius="@dimen/plp_corner_radius"/>
        </shape>
    </item>
</layer-list>